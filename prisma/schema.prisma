generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Persona {
  id                    String   @id @default(uuid()) @db.Uuid
  tipo_identificacion   String
  numero_identificacion String
  nombre1               String
  nombre2               String?
  apellido1             String
  apellido2             String?
  sexo                  String
  fecha_nacimiento      DateTime @db.Date

  @@map("personas")
}
